{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,

  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  },
  "pip-compile": {
    "managerFilePatterns": [
      "requirements.txt",
      "requirement-tests.txt"
    ]
  },

  "packageRules": [
    {
      "matchDatasources": ["pypi"],
      "groupName": "Python package updates",
      "schedule": [
        "* 0-3 1 * *"
      ]
    }
  ]
}
